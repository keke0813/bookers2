<div class="container">
  <div class="row">
    <div class="col-md-6 mx-auto">
      <h1>Users info</h1>
      <% if @user.errors.any? %>
        <%= @user.errors.count %>errors prohibited this obj from being saved:
        <ul>
          <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

        <%= form_with model: @user do |f| %>
        <div class="d-flex flex-column mt-3">
          <label for="inputName">Name</label>
          <%= f.text_field :name, autofocus: true, id:"inputName" %>
        </div>
        <div class="d-flex flex-column mt-3">
          <label for="inputImage">Image</label>
          <%= f.file_field :profile_image, accept:"image/*" %>
        </div>
        <div class="d-flex flex-column mt-3">
          <label for="inputIntroduction">Introduction</label>
          <%= f.text_field :introduction, autofocus: true, id:"inputIntroduction" %>
        </div>
        <div class="mt-3">
          <%= f.submit "Update User", class:"mt-3"%>
        </div>
      <% end %>
    </div>
  </div>
</div>